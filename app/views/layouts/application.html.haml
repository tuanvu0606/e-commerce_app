!!!
%html
  %head
    %meta(content="text/html; charset=UTF-8" http-equiv="Content-Type")/
    %title ECommerceApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      .container 
        %nav.navbar.navbar-expand-lg.navbar-light(style = "background-color: white  ;")
          %a.navbar-brand(href="#") Phone
          %button.navbar-toggler(aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation" data-target="#navbarText" data-toggle="collapse" type="button")
            %span.navbar-toggler-icon
          #navbarText.collapse.navbar-collapse
            %ul.navbar-nav.mr-auto
              %li.nav-item.active
                %a.nav-link(href="#")
                  
                  %span.sr-only (current)
          - if user_signed_in?
            %span.navbar-text(style = "padding-right: 10px;")
              = link_to 'Account', edit_user_registration_path
            %span.navbar-text(style = "padding-right: 10px;")
              = link_to "Log Out", destroy_user_session_path, method: :delete
          - else                
            %span.navbar-text(style = "padding-right: 10px;")
              = link_to "Log in", new_user_session_path               
            %span.navbar-text
              = link_to "Sign Up", new_user_registration_path
      .container
        %nav.navbar.navbar-expand-lg.navbar-light.d-flex.bd-highlight(style = "background-color: white; padding: 6px;")
          %a.navbar-brand.p-2.flex-fill.bd-highlight(href="#") App
          %form.form-inline.my-2.my-lg-0.p-2.flex-fill.bd-highlight.d-flex.justify-content-center
            %input.form-control.mr-sm-2(aria-label="Search" placeholder="Search" type="search")
            %button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search
          %div.p-2.flex-fill.bd-highlight.d-flex.justify-content-end
            = link_to '', @order, :class => "button btn btn-outline-success my-2 my-sm-0 i fa fa-shopping-cart", :style => "height: 38px; padding-top: 10px; margin-right: 10px"
            = cart_count_over_one

      .container
        %nav.navbar.navbar-expand-lg.navbar-light.d-flex.bd-highlight.justify-content-begin(style = "background-color: white;")
          %a.navbar-brand(href=home_path) Home            
          %a.navbar-brand(href=categories_path) Category
          %a.navbar-brand(href=articles_path) Articles

    .container
      = yield

